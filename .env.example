# =============================================================================
# Blitz Test Server - Environment Configuration Example
# =============================================================================
# Copy this file to .env and customize the values for your deployment
# DO NOT commit .env file to git - it should contain actual secrets

# =============================================================================
# Core Application Settings
# =============================================================================
FLASK_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Flask Secret (REQUIRED - generate a secure random key!)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# =============================================================================
# Database Configuration
# =============================================================================
# Optional: Custom database path (defaults to instance/users.db)
# BLITZ_DB_PATH=/path/to/your/database.db

# =============================================================================
# Web Server Configuration  
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8000

# =============================================================================
# Bot Manager Configuration  
# =============================================================================
# Directory for bot runner scripts (default: ./runtime/bot_runners)
# Use absolute path for production. Do not use /tmp to avoid noexec issues.
BOT_RUNNER_DIR=/srv/blitz-test-server/runtime/bot_runners

# Python executable for bot processes (default: current Python or .venv/bin/python)
# BLITZ_PYTHON=/usr/bin/python3

# =============================================================================
# Metrics and Observability (PR #6 features)
# =============================================================================
# Set to 'true' to enable Prometheus metrics at /metrics endpoint
ENABLE_METRICS=false

# For Gunicorn multiprocess metrics (when ENABLE_METRICS=true)
# PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Redis URL for distributed rate limiting (leave empty for single server)
RATE_LIMIT_REDIS_URL=

# Rate limit configurations
RATE_LIMITS_START=10/minute
RATE_LIMITS_STOP=10/minute  
RATE_LIMITS_RECOVER=10/minute
RATE_LIMITS_STATUS=30/minute
RATE_LIMITS_GLOBAL=200/minute

# =============================================================================
# Security Configuration
# =============================================================================
# Content Security Policy (CDN sources for Bootstrap/jQuery)
SECURITY_CSP="default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net"

# Maximum request size in bytes (1MB default)
MAX_REQUEST_BYTES=1048576

# Session security (set to true when using HTTPS)
SESSION_SECURE=false
CSRF_SSL_STRICT=false

# =============================================================================
# Maintenance and Operations
# =============================================================================
# Default maintenance mode state
MAINTENANCE_MODE_DEFAULT=false

# Default broadcast banner message (leave empty for no banner)
BROADCAST_BANNER=

# =============================================================================
# Session Configuration
# =============================================================================
# Custom session cookie name (optional)
# SESSION_COOKIE_NAME=blitz_session

# =============================================================================
# Email Configuration (if using email features)
# =============================================================================
# Configure these if you need email functionality
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# =============================================================================
# Additional Deployment Settings
# =============================================================================
# Set timezone
TZ=Asia/Seoul

# Python optimizations
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1